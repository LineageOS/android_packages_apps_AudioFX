<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="false">
        <bitmap android:gravity="top" android:src="@drawable/toggle_check_on_disabled" />
    </item>

    <item android:state_checked="true">
        <bitmap android:gravity="top" android:src="@drawable/toggle_check_on" />
    </item>

    <item android:state_checked="false">
        <bitmap android:gravity="top" android:src="@drawable/toggle_check_off" />
    </item>
</selector>